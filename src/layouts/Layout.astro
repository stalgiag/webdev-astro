---
export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cabin&family=Inter:wght@900&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-green">
    <slot />
    <!-- SVG FILTER -->
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 0 0"
      width="0"
      height="0"
      focusable="false"
      role="none"
      style="visibility: hidden; position: absolute; left: -9999px; overflow: hidden;"
      ><defs
        ><filter id="duotone"
          ><feColorMatrix
            color-interpolation-filters="sRGB"
            type="matrix"
            values=" .299 .587 .114 0 0 .299 .587 .114 0 0 .299 .587 .114 0 0 .299 .587 .114 0 0 "
          ></feColorMatrix><feComponentTransfer
            color-interpolation-filters="sRGB"
            ><feFuncR type="table" tableValues="0 0.67450980392157"
            ></feFuncR><feFuncG type="table" tableValues="0 0"
            ></feFuncG><feFuncB type="table" tableValues="0 0.65490196078431"
            ></feFuncB><feFuncA type="table" tableValues="1 0"></feFuncA>
          </feComponentTransfer><feComposite in2="SourceGraphic" operator="in"
          ></feComposite>
        </filter>
      </defs>
    </svg>
    <!-- /SVG FILTER -->
  </body>
</html>
